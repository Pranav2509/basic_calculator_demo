<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mokriya.pranav.basiccalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basic_calculator"
        android:gravity="center"
        android:textSize="18sp"
        android:id="@+id/intro_string_tv"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/enter_numer_1"
        android:id="@+id/et_1"
        android:inputType="number"
        android:layout_below="@+id/intro_string_tv"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/enter_numer_2"
        android:id="@+id/et_2"
        android:layout_below="@+id/et_1"
        android:inputType="number"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/et_2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/result_tv"
        android:text="@string/result"
        android:gravity="center_vertical"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/result_tv"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/ops_ll_1"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="+"
            android:textSize="25sp"
            android:id="@+id/add_bt"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="-"
            android:textSize="25sp"
            android:id="@+id/substract_bt"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/ops_ll_1"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/ops_ll_2"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="*"
            android:textSize="25sp"
            android:id="@+id/multiply_bt"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="/"
            android:textSize="25sp"
            android:id="@+id/divide_bt"
            />


    </LinearLayout>




</RelativeLayout>
